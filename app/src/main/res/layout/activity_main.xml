<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ACTIVITY 1"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/ed_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Masukkan Nama"
        android:inputType="text"
        android:textSize="10sp"
        />
    <EditText
        android:id="@+id/ed_institusi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Masukkan institusi"
        android:inputType="text"
        android:textSize="10sp"
        />

    <Button
        android:id="@+id/btn_pindah_tanpa_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="PINDAH ACTIVITY 2 Tanpa Data"/>

    <Button
        android:id="@+id/btn_pindah_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="PINDAH ACTIVITY 2 Data"/>

</LinearLayout>